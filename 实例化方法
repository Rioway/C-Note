
namespace Demo1
{
    class Program
    {
        static void Main()
        {
           //【方法1】：一个个赋值
            Student Abby = new Student();
            Abby.SNO = "";
            Abby.SName = "";
            Abby.Gender = "";
            Abby.Birthday = Convert.ToDateTime("yyyy-mm-dd");
            Abby.Mobile = "";
            Abby.Email = "";
            
            //【方法2】：对象初始化（逗号分隔）
            Student Tony = Student()
            {
                SNO = "",
                SName = "",
                Gender = "",
                Birthday = Convert.ToDateTime("yyyy-mm-dd"),
                Mobile = "",
                Email = "",
            };
            //【方法3】：通过构造方法进行初始化
            Student Tomas = new Student("","",Convert.ToDateTime"","","","");
        }
    }
    
    class Student
    {
        //属性
        public string SNO{get;set;}
        public string SName{get;set;}
        public string Gender{get;set;}
        public string Birthday{get;set;}
        public string Mobile{get;set;}
        public string Email{get;set;}
        
        //构造方法(方法名与类名相同)
        public void Student(string sno,string name,string birthday,string gender,string mobile,string email)
        {
            SNO = sno;
            SName = name;
            Birthday = birthday;
            Gender = gender;
            Mobile = mobile;
            Email = email;
        }
    }
}



